        "$userId": {
          ".write": "auth != null && auth.uid == $userId"
        }
      }
    },
    "cursors": {
      "$boardId": {
        ".read": "auth != null",
        "$userId": {
          ".write": "auth != null && auth.uid == $userId"
        }
      }
    }
  }
}
